@model User
@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Register - PocketMenu</title>
    <meta name="viewport"
          content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta name="description" content="ArchitectUI HTML Bootstrap 4 Dashboard Template">

    <!-- Disable tap highlight on IE -->
    <meta name="msapplication-tap-highlight" content="no">

    <link href="~/Content/src/main.pro.css" rel="stylesheet">
    <style>
        .app-logo {
            background-repeat: round;
        }
    </style>
</head>

<body>
    <div class="app-container app-theme-white body-tabs-shadow">
        <div class="app-container">
            <div class="h-100">
                <div class="h-100 no-gutters row">
                    <div class="h-100 d-md-flex d-sm-block bg-white justify-content-center align-items-center col-md-12 col-lg-7">
                        <div class="mx-auto app-login-box col-sm-12 col-md-10 col-lg-9">
                            <div class="app-logo"></div>
                            <h4>
                                <div>Welcome,</div>
                                <span>It only takes a <span class="text-success">few seconds</span> to create your account</span>
                            </h4>
                            <div>
                                @using (Html.BeginForm("Up", "Sign", FormMethod.Post, new { @class = "form-signin" }))
                                {
                                <div class="form-row">
                                    <div class="col-md-6">
                                        <div class="position-relative form-group">
                                            <label for="inputEmail" class=""><span class="text-danger">*</span> Email</label>
                                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email here...", type = "email", @class = "form-control", required = "", autofocus = "", id = "inputEmail" })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="position-relative form-group">
                                            <label for="inputName" class=""><span class="text-danger">*</span>First Name</label>
                                            @Html.TextBoxFor(m => m.FirstName, new { placeholder = "Your first name...", type = "text", @class = "form-control", required = "", autofocus = "", id = "inputFirstName" })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="position-relative form-group">
                                            <label for="inputName" class=""><span class="text-danger">*</span>Last Name</label>
                                            @Html.TextBoxFor(m => m.LastName, new { placeholder = "Your last name...", type = "text", @class = "form-control", required = "", autofocus = "", id = "inputLastName" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="position-relative form-group">
                                            <label for="inputPassword" class=""><span class="text-danger">*</span> Password</label>
                                            @Html.PasswordFor(m => m.Password, new { placeholder = "Password...", type = "password", @class = "form-control", required = "", autofocus = "", id = "inputPassword" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="position-relative form-group">
                                            <label for="inputRPasswordAgain" class=""><span class="text-danger">*</span> Repeat Password</label>
                                            @Html.PasswordFor(m => m.Password, new { placeholder = "Repeat Password...", type = "password", @class = "form-control", required = "", autofocus = "", id = "inputRPasswordAgain" })
                                        </div>
                                    </div>
                                </div>
                                    <div class="mt-3 position-relative form-check">
                                        <label for="exampleCheck" class="form-check-label">You will be accepting our <a href="javascript:void(0);">Terms and Conditions</a> via clicking the button below.</label>
                                    </div>
                                    <div class="mt-4 d-flex align-items-center">
                                        <h5 class="mb-0">
                                            Already have an account?
                                            @Html.ActionLink("Sign in", "In", "Sign", null, new { @class = "text-primary" })
                                        </h5>
                                        <div class="ml-auto">
                                            <button class="btn-wide btn-pill btn-shadow btn-hover-shine btn btn-primary btn-lg">Create Account </button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="d-lg-flex d-xs-none col-lg-5">
                        <div class="slider-light">
                            <div class="slick-slider slick-initialized">
                                <div>
                                    <div class="position-relative h-100 d-flex justify-content-center align-items-center bg-premium-dark"
                                         tabindex="-1">
                                        <div class="slide-img-bg"
                                             style="background-image: url('assets/images/originals/citynights.jpg');"></div>
                                        <div class="slider-content">
                                            <h3>Start using PocketMenu for free in a few seconds!</h3>
                                            <p>
                                                PocketMenu is free for all and totally ad-free. But if you want to appreciate our work, feel free to contact us or buy us coffee :)
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/Content/src/assets/scripts/main.pro.js"></script>
</body>

</html>

