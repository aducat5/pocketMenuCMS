@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Development - Pocket Menu Content Managament System</title>
    <meta name="viewport"
          content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta name="description" content="Pocket Menu Content Managament System">

    <!-- Disable tap highlight on IE -->
    <meta name="msapplication-tap-highlight" content="no">

    <link href="~/Content/src/main.pro.css" rel="stylesheet">
    <style>
        .app-logo {
            background-repeat: round;
        }
    </style>
</head>
<body>
    <div class="app-container app-theme-white body-tabs-shadow">
        <div class="app-container">
            <div class="h-100">
                <div class="h-100 no-gutters row">
                    <div class="d-none d-lg-block col-lg-4">
                        <div class="slider-light">
                            <div class="slick-slider">
                                <div>
                                    <div class="position-relative h-100 d-flex justify-content-center align-items-center bg-plum-plate" tabindex="-1">
                                        <div class="slide-img-bg" style="background-image: url('assets/images/originals/city.jpg');"></div>
                                        <div class="slider-content">
                                            <h3>Create Your Restaurant</h3>
                                            <p>
                                                Give a place to your restaurant in our application.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <div class="position-relative h-100 d-flex justify-content-center align-items-center bg-premium-dark" tabindex="-1">
                                        <div class="slide-img-bg" style="background-image: url('assets/images/originals/citynights.jpg');"></div>
                                        <div class="slider-content">
                                            <h3>Build your menu with our style</h3>
                                            <p>
                                                Build a beautiful menu with a little efort. Let us handle the designing and rest.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <div class="position-relative h-100 d-flex justify-content-center align-items-center bg-sunny-morning" tabindex="-1">
                                        <div class="slide-img-bg" style="background-image: url('assets/images/originals/citydark.jpg');"></div>
                                        <div class="slider-content">
                                            <h3>Share your menu with your customers</h3>
                                            <p>Share your menu with your customers via the qr code or the link it provides. Everyone can access your menu from web or from our mobile application.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="h-100 d-flex bg-white justify-content-center align-items-center col-md-12 col-lg-8">
                        <div class="mx-auto app-login-box col-sm-12 col-md-10 col-lg-9">
                            <div class="app-logo"></div>
                            <h4 class="mb-0">
                                <span class="d-block">Welcome,</span>
                                <span>login is currently unavailable</span>
                            </h4>
                            <h6 class="mt-3">
                                No account?
                                @Html.ActionLink("Sign up now", "Up", "Sign", null, new { @class = "btn btn-primary" })
                            </h6>
                            <div class="divider row"></div>
                            <div>
                                <div class="row">
                                    <div class="col-md-12 text-center">
                                        <em class="fa fa-cog fa-10x"></em>
                                    </div>
                                    <div class="col-md-12 text-center">
                                        <h2>This application is still in development</h2>
                                    </div>
                                    <div class="col-md-12 text-center">
                                        <p>
                                            But you can still get your account from the sign in button up there. We will notify you when the development is complete.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/Content/src/assets/scripts/main.pro.js"></script>
</body>

</html>